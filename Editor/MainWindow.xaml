<Window x:Class="Editor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Editor"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" VerticalAlignment="Center"
        ShowInTaskbar="True">
    <Grid Name="MainGrid" Background="LightBlue">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        
        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="72" Grid.Row="0">
            <TextBlock Name="entityText1" />
        </TextBlock>
        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="72" Grid.Row="1">
            <TextBlock Name="entityTextMove" />
        </TextBlock>
        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="72" Grid.Row="2">
            <TextBlock Name="entityText2" />
        </TextBlock>

    </Grid>
</Window>
